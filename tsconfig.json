{
  "compilerOptions": {
    "target": "ES2020",                // Modern JS target
    "module": "commonjs",              // Node.js module system
    "outDir": "./dist",                // Compiled output
    "rootDir": "./src",                // Source code
    "strict": true,                    // Enable strict type checking
    "esModuleInterop": true,           // Better module imports
    "skipLibCheck": true,              // Speed up compilation
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",        // Node.js style resolution
    "resolveJsonModule": true,         // Allow importing JSON
    "baseUrl": ".",                    // For absolute imports
    // "paths": {
    //   "@/*": ["src/*"]                 // Alias for src (e.g., import from '@/controllers')
    // },
    "experimentalDecorators": true,      // Enables @injectable, @inject, etc.
    "emitDecoratorMetadata": true,       // Required for tsyringe & reflection
    "strictPropertyInitialization": true, // Optional: avoids uninitialized prop errors with DI
    
  },
  "include": ["src/**/*.ts"],          // What to compile
  "exclude": ["node_modules", "dist"]  // Ignore these
}